= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  .form-group
    = f.label :email, class: "control-label sr-only"
    = f.email_field :email, :autofocus => true, placeholder: "Please enter your email address", required: true, class: "input-lg form-control"
  .form-group
    = f.label :password, class: "control-label sr-only"
    = f.password_field :password, placeholder: "Please enter your password", required: true, class: "input-lg form-control"
  .form-group
    = f.label :password_confirmation, class: "control-label sr-only"
    = f.password_field :password_confirmation, placeholder: "Please re-enter your password", required: true, class: "input-lg form-control"
  .form-group
    = f.submit "Sign up", class: "btn btn-success btn-block btn-default", id: "sign_up_form_button"